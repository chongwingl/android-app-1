<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
   	<style name="BaseFontStyle">
   	    <item name="android:textSize">14sp</item>
   	    <item name="android:textColor">@android:color/black</item>
   	</style>
   	
   	<style name="GreenFontStyle" parent="BaseFontStyle">
   	    <item name="android:textColor">@color/darkgreen</item>
   	</style>
   	
   	<style name="RedFontStyle" parent="BaseFontStyle">
   	    <item name="android:textColor">@color/red</item>
   	</style>
   	
   	<style name="WhiteFontStyle" parent="BaseFontStyle">
   	    <item name="android:textColor">@android:color/white</item>
   	</style>
   	
   	<style name="MediumWhiteFontStyle" parent="WhiteFontStyle">
   	    <item name="android:textSize">16sp</item>
   	</style>
   	
   	<style name="BigWhiteFontStyle" parent="WhiteFontStyle">
   	    <item name="android:textSize">20sp</item>
   	</style>
   	
   		<style name="TitleFontStyle" parent="BaseFontStyle">
   	    <item name="android:textSize">25sp</item>
   	    <item name="android:textStyle">bold</item>
   	</style>
   	
   	<style name="ButtonFontStyle" parent="WhiteFontStyle">
   	    <item name="android:textSize">20sp</item>
   	    <item name="android:background">@android:color/black</item>
   	</style>
   	
   	<style name="BaseTableCaseStyle" parent="BaseFontStyle">
   	    <item name="android:layout_height">match_parent</item>
   	    <item name="android:layout_width">0dp</item>
   	    <item name="android:layout_weight">1</item>
   	    <item name="android:gravity">center</item>
   	</style>
   	
   	<style name="HeaderTableCaseStyle" parent="BaseTableCaseStyle">
   	    <item name="android:textSize">16sp</item>
   	    <item name="android:textStyle">bold</item>
   	    <item name="android:textColor">@android:color/white</item>
   	</style>
   	
   	<style name="TextBaseStyle" parent="BaseFontStyle">
   	    <item name="android:textSize">18sp</item>
	 	<item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">3dip</item>
	    <item name="android:padding">3dip</item>
   	</style>
   	
   	<style name="MenuBaseStyle" parent="TextBaseStyle">
   	    <item name="android:textSize">18sp</item>
   	    <item name="android:textColor">@android:color/white</item>
   	    <item name="android:background">@android:color/black</item>
   	</style>
   	
   	<style name="MenuStyleBigFont" parent="MenuBaseStyle">
   	    <item name="android:textSize">20sp</item>
   	    <item name="android:textStyle">bold</item>
	    <item name="android:layout_margin">5dip</item>
	    <item name="android:padding">5dip</item>
   	</style>
   	
   	<style name="LabelBaseStyle" parent="TextBaseStyle">
   	      <item name="android:layout_width">wrap_content</item>
   	</style>

</resources>